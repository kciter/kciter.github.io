---

{
  items.map((item, index) => (
    <a
      href={item.link}
      target="_blank"
      rel="noopener noreferrer"
      class="social-icon inline-block p-[5px] no-underline"
      aria-label={item.label}
      style={`--hover-color: ${item.hoverColor}; transition: color .5s;${index !== items.length - 1 ? ' margin-right: 5px;' : ''}`}
    >
      <svg
        class="inline-block h-4 w-4"
        viewBox="0 0 24 24"
        fill="currentColor"
        set:html={svgIcons[item.icon]}
      />
    </a>
  ))
}

<style>
  .social-icon {
    color: #999;
  }
  .social-icon:hover {
    color: var(--hover-color);
  }
</style>
