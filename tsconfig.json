{
  "include": ["./src/**/*", "type.d.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@materials/*": ["./src/materials/*"],
      "@assets/*": ["./src/assets/*"],
      "@templates/*": ["./src/templates/*"]
    }
  }
}
